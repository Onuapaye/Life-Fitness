<div id="show-show-modal" class="modal fade bs-example-modal-static" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
                <h4 class="modal-title">User Activity Log Details</h4>
            </div>

            <div class="modal-body">

                <div class="list-group contact-group">
                    <div class="list-group-item">

                        <div class="media"><!-- media start -->
                            <div class="pull-left">
                                <% if @user_activity.activity.activity_avatar.present? %>
                                    <%= image_tag @user_activity.activity.activity_avatar.url(:thumb), class: 'img-circle img-online', alt:'Activity Image' %>
                                <% else %>
                                    <%= image_tag asset_path('fitnezz_css/img/no-image.png'), class: 'img-circle img-online', alt:'Activity Image' %>
                                <% end %>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading"><%= @user_activity.activity.activity_name %> <br/>
                                    <small><%= @user_activity.user_activity_note %>.</small>
                                </h4>
                                <div class="media-content">
                                    <i class="fa fa-calendar"></i> <%= @user_activity.user_activity_date.strftime('%Y %B %d') %>
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-clock-o"></i> <%= @user_activity.user_activity_start.strftime('%I:%M:%S') %></li>
                                        <li><i class="fa fa-clock-o"></i> <%= @user_activity.user_activity_end.strftime('%I:%M:%S') %></li>
                                        <li><i class="fa fa-calendar"></i> <%= @user_activity.updated_at.strftime('%Y %b %d') %></li>
                                    </ul>
                                </div>
                                
                            </div>
                        </div><!-- media end -->

                    </div><!--group-list -->
                </div>
                <div class="text-center">
                    <%= link_to 'Edit Record', edit_user_activity_path(@user_activity), data:{dismiss:'modal'}, remote: true, class: 'btn btn-primary btn-sm' %> |
                    <%#= link_to 'Back', user_activities_path, class: 'btn btn-default btn-sm' %>
                    <button aria-hidden="false" data-dismiss="modal" class="btn btn-sm btn-danger" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>




<style type="text/css">
  .img-edit {
    border-radius: 50%;
  }
  .img-sm {
    max-height: 10px;
    max-width: 10px;
  }
  .img-thumb {
    max-height: 100px;
    max-width: 100px;
  }
</style>

<%= form_with(model: role, local: true, html: { multipart: true }) do |frm| %>
  <div class="panel-body">
        
    <!-- DISPLAY ERRORS HERE IF ANY -->
    <% if role.errors.any? %>

      <div class="alert alert-danger">

        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
        <strong>Oops!</strong>
        <h2><%= pluralize(role.errors.count, "error") %> prevented the form from being submitted:</h2>

        <ul>
          <% role.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>

      </div>

    <% end %>

      <div class="col-md-6">
        <div class="col-md-12">
          <div class="form-group">
              <label class="col-sm-3 control-label"><%= get_role_name %> <span class="asterisk">*</span></label>
              <div class="col-sm-9">
                <%= frm.text_field :role_name, autofocus: true, autocomplete: "role name", class: 'form-control', title: 'Role name' %>
              </div>
          </div><!-- form-group -->
        </div>
      
        <div class="form-group">
              <label class="col-sm-5 control-label"><%= get_label_status %> <span class="asterisk">*</span></label>
              <div class="col-sm-7">
                <%= frm.check_box :role_status, {type: "checkbox", id: "role_status"}, :true, :false %>
              </div>
        </div><!-- form-group -->
      </div>

      <div class="col-md-6">
         <div class="form-group">
            <label class="col-sm-3 control-label"><%= get_role_description %> <span class="asterisk">*</span></label>
            <div class="col-sm-9">
              <%= frm.text_area :role_description, autofocus: true, autocomplete: "description", class: 'form-control', rows: '5' %>
            </div>
        </div><!-- form-group -->
          
      </div>

    <div class="col-sm-9 col-sm-offset-3">
        <button class="btn btn-primary mr5">Submit</button>
        <!-- <button aria-hidden="false" class="btn btn-sm btn-danger" type="button">Close</button> -->
    </div>
  </div><!-- panel-body -->

<% end %>

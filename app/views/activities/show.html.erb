<p id="notice"><%= notice %></p>

<div class="row">

    <div class="list-group contact-group">
       <div class="list-group-item">

    	<!-- <a href="#" class="list-group-item"> -->
        <div class="media">
            <div class="pull-left">
                <!-- <img class="img-circle img-online" src="images/photos/user1.png" alt="..."> -->
                <% if @activity.activity_avatar.present? %>
    			  <%= image_tag @activity.activity_avatar.url(:thumb), class: 'img-online', alt:'Activity Image' %>
    			<% else %>
    			  <%= image_tag asset_path('fitnezz_css/img/no-image.png'), class: 'img-online', alt:'Activity Image' %>
    			<% end %>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= @activity.activity_name.upcase %> 
                	<small>Activity</small>
                </h4>
                <div class="media-content">
                    <i class="fa fa-info-circle"></i> <%= @activity.activity_description %>
                    <ul class="list-unstyled">
                        <li title="Minimum duration"><i class="fa fa-clock-o"></i>Min Duration::&nbsp;<%= @activity.activity_min_duration %></li>
                        <li title="Maximum duration"><i class="fa fa-clock-o"></i>Max Duration::&nbsp;<%= @activity.activity_max_duration %></li>
                        <li title="Last updated"><i class="fa fa-calendar"></i>Updated On::&nbsp;<%= @activity.updated_at.strftime('%Y %B %d') %></li>
                    </ul>
                </div>
            </div>
        </div><!-- media -->
    	<!-- </a>list-group -->
    </div>
</div>

<%= link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-success btn-sm' %> |
<%= link_to 'Back', activities_path, class: 'btn btn-default btn-sm' %>

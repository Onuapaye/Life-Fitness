<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <!-- user avartar-->
        <div class="row">
          <div class="col-sm-6">
            <% #if resource.user_avatar.attached? %>
            <%#= image_tag resource.user_avatar.variant(resize: "100x100!"), class: "rounded" %>
            <% #else %>
            <%#= image_tag gravatar_image_url(current_user.email, size: 100). height: 100, width: 100, class: "rounded" %>
            <% #end %>
            <img src="<%= image_tag user_avatar(resource, size: 100) %>" class="rounded" %>
          </div>
        </div><!-- row -->
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder=" First name"> -->
              <%= f.text_field :user_first_name, autofocus: true, autocomplete: "first name", class: "form-control", placeholder: " First name" %>
            </div><!-- input-group -->
          </div>
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder="Last name"> -->
              <%= f.text_field :user_last_name, autofocus: true, autocomplete: "Last name", class: "form-control", placeholder: "Last name" %>
            </div><!-- input-group -->
          </div>
        </div><!-- row -->
        <br />
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder=" Age"> -->
              <%= f.number_field :user_age, autofocus: true, autocomplete: "age", class: "form-control",  placeholder: "Age" %>
            </div><!-- input-group -->
          </div>
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder="Telephone"> -->
              <%= telephone_field(:user, :user_telephone), class: "form-control", placeholder: "Telephone" %>
            </div><!-- input-group -->
          </div>
        </div><!-- row -->
        <br />
        <div class="row">
          <div class="col-sm-12">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <!-- <input type="email" class="form-control" placeholder="E-mail Address"> -->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail address" %>
            </div><!-- input-group -->
          </div>
        </div><!-- row -->
        <br />
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <!-- <input type="password" class="form-control" placeholder="Password"> -->
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            </div><!-- input-group -->
          </div>
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <!-- <input type="password" class="form-control" placeholder="Password"> -->
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
            </div><!-- input-group -->
          </div>
        </div><!-- row -->
        <br />
        <div class="row">
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder="Role"> -->
              <%= select("user", "role_id", Role.all.collect {|r| [ r.role_name, r.id ] }, {include_blank: ''}), class: "form-control" %>
            </div><!-- input-group -->
          </div>
          <div class="col-sm-6">
            <div class="input-group mb15">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input type="text" class="form-control" placeholder="Active status"> -->
              <%= f.check_box :user_status, {}, :true, :false, class: "form-control", id: "agree" %>
            </div><!-- input-group -->
          </div>
        </div><!-- row -->
        <br />
        <div class="clearfix">
          <div class="pull-left">
            <div class="ckbox ckbox-primary mt5">
              <input type="checkbox" id="agree" value="1">
              <label for="agree">I agree with <a href="">Terms and Conditions</a></label>
            </div>
          </div>
          <div class="pull-right">
            <button type="submit" class="btn btn-success">Create New Account <i class="fa fa-angle-right ml5"></i></button>
            <%= f.submit "Register", class: "btn btn-success" %><i class="fa fa-angle-right ml5"></i>
          </div>
        </div>




  <%= devise_error_messages! %>

  <div class="field">
     <%= f.file_field :user_avatar %>
   </div>

   <div class="field">
    <%= f.label(get_user_first_name) %><br />
   </div>

   <div class="field">
    <%= f.label(get_user_last_name) %><br />
    
   </div>

   <div class="field">
    <%= f.label(get_user_age) %><br />
    
   </div>

   <div class="field">
    <%= f.label(get_user_telephone) %><br />
    <%#= f.telephone_field :user_telephone, autofocus: true, autocomplete: "telephone" %>
    
   </div>

   <div class="field">
    <%= f.label(get_label_status) %><br />
    
   </div>

   <div class="field">
    <%= f.label :role_id %><br />
    
   </div>

  <div class="field">
    <%= f.label :email %><br />
    
  </div>

  <div class="field">
    <%= f.label :password %>
    
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    
  </div>
<% end %>

<%= render "devise/shared/links" %>
